<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:gravity="center"
    android:id="@+id/frame"
    tools:context=".ChatFragment"
    android:background="#FFFDD0">
    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        tools:layout_editor_absoluteX="0dp" >
        <FrameLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:id="@+id/rrr">

        <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Mobile HelpLine Number"
        android:textColor="#0A1172"
        android:layout_marginTop="20dp"
        android:gravity="center"
        android:textSize="30sp"
        android:textStyle="bold"
        />

    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Click Here"
        android:textColor="#0A1172"
        android:layout_marginTop="100sp"
        android:layout_marginRight="20sp"
        android:gravity="end"
        android:textSize="15sp"
        android:textStyle="bold"
        />

    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:id="@+id/et_number1"
        android:text="100"
        android:textColor="#000000"
        android:layout_marginTop="150sp"
        android:layout_marginLeft="20sp"
        android:layout_marginRight="20sp"
        android:padding="10dp"
        android:textSize="20sp"
        android:textStyle="bold"
        android:background="@drawable/ic_border_black"
        />

    <ImageButton
        android:layout_width="60dp"
        android:layout_height="35dp"
        android:id="@+id/bt_call1"
        android:layout_marginTop="154sp"
        android:layout_marginRight="30sp"
        android:src="@drawable/ic_call"
        android:layout_gravity="end"
        android:background="@drawable/bt_round_small"
        />
    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:id="@+id/et_number2"
        android:text="101"
        android:textColor="#000000"
        android:layout_marginTop="210sp"
        android:layout_marginLeft="20sp"
        android:layout_marginRight="20sp"
        android:padding="10dp"
        android:textSize="20sp"
        android:textStyle="bold"
        android:background="@drawable/ic_border_black"
        />
    <ImageButton
        android:layout_width="60dp"
        android:layout_height="35dp"
        android:id="@+id/bt_call2"
        android:layout_marginTop="210sp"
        android:layout_marginRight="30sp"
        android:src="@drawable/ic_call"
        android:layout_gravity="end"
        android:background="@drawable/bt_round_small"
        />


    <EditText
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="320sp"
        android:id="@+id/et_number"
        android:hint="Enter Phone Number"
        android:digits="1234567890"
        android:layout_marginLeft="100dp"
        android:maxLength="10"
        android:inputType="phone"/>

    <ImageButton
        android:layout_width="80dp"
        android:layout_height="80dp"
        android:id="@+id/bt_call"
        android:layout_marginTop="370dp"
        android:src="@drawable/ic_call"
        android:layout_marginLeft="140dp"
        android:background="@drawable/bt_round"/>


    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Emergency Number "
        android:textColor="#0A1172"
        android:layout_marginTop="480dp"
        android:gravity="center"
        android:textSize="25sp"
        android:textStyle="bold"
        />
    <View
        android:layout_width="wrap_content"
        android:layout_height="1dp"
        android:background="#00000f"
        android:layout_marginTop="520dp"
        android:layout_marginLeft="60dp"
        android:layout_marginRight="60dp"
        />
            <ImageView
                android:layout_width="match_parent"
                android:layout_height="400dp"
                android:src="@drawable/akk"
                android:layout_marginTop="550dp"
                android:layout_marginRight="-30sp"
                android:layout_marginLeft="-30sp"
                />
            <View
                android:layout_width="wrap_content"
                android:layout_height="1dp"
                android:background="#00000f"
                android:layout_marginTop="1000dp"
                android:layout_marginLeft="60dp"
                android:layout_marginRight="60dp"
                android:layout_marginBottom="50dp"

                />



        </FrameLayout>
    </ScrollView>








</LinearLayout>

