<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent" android:layout_height="match_parent"
    android:background="#FFFDD0"
    >
    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        >
        <FrameLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent">

            <TextView
                android:id="@+id/fragment_container"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="30dp"
                android:gravity="center"
                android:text="GPS Image Sender"
                android:textSize="30sp"
                android:textStyle="bold"
                android:textColor="#0A1172"
                />

            <ImageView
                android:layout_width="wrap_content"
                android:layout_height="340dp"
                android:layout_marginLeft="5dp"
                android:layout_marginTop="90dp"
                android:layout_marginRight="5dp"
                android:background="@drawable/ic_border_blue"
                android:padding="0.7sp"
                android:src="@drawable/sendwhats" />

            <Button
                android:id="@+id/buttonStartLocation"
                android:layout_width="match_parent"
                android:layout_height="36dp"
                android:layout_marginLeft="50sp"
                android:layout_marginRight="50sp"
                android:layout_marginTop="450dp"
                android:background="#808080"
                android:gravity="center"
                android:text="Share Live Location"
                android:textColor="#fcfaf4"
                android:textSize="20sp"
                android:textStyle="bold" />
            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="550sp"
                android:gravity="start"
                android:text="Using this page you can share your live location and also send the photo of the criminal. For Share Live Location click on the SHARE LIVE LOCATION Button and For Send the photo click on the SHARE PICTURE Button "
                android:textSize="20sp"
                android:textStyle="normal"
                android:textAlignment="viewStart"
                android:textColor="#000000"
                android:layout_marginLeft="30sp"
                android:layout_marginRight="20sp"
                android:background="@drawable/ic_border_black"
                android:padding="10sp"
                />

            <ImageView
                android:id="@+id/map"
                android:layout_width="wrap_content"
                android:layout_height="340dp"
                android:layout_marginRight="5dp"
                android:layout_marginLeft="5dp"
                android:padding="0.7sp"
                android:src="@drawable/shareimg"
                android:layout_marginTop="750dp"
                android:background="@drawable/ic_border_blue"
                />
            <Button
                android:id="@+id/sharepic"
                android:layout_width="match_parent"
                android:layout_height="36dp"
                android:layout_marginLeft="50sp"
                android:layout_marginTop="1150dp"
                android:layout_marginRight="50sp"
                android:background="#808080"
                android:gravity="center"
                android:text="Share Picture"
                android:textColor="#fcfaf4"
                android:layout_marginBottom="50sp"
                android:textSize="20sp"
                android:textStyle="bold" />
            <View
                android:layout_width="wrap_content"
                android:layout_height="1dp"
                android:background="#00000f"
                android:layout_marginTop="1250dp"
                android:layout_marginLeft="60dp"
                android:layout_marginRight="60dp"
                android:layout_marginBottom="50dp"

                />


        </FrameLayout>

    </ScrollView>

</RelativeLayout>